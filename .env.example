# ============================================
# DATABASE CONFIGURATION
# ============================================

# Full database URL (recommended - easier)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/onboarding_db

# OR use individual components:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DB_NAME=onboarding_db

# For DigitalOcean Droplet, use your droplet IP:
# DATABASE_URL=postgresql+asyncpg://username:password@YOUR_DROPLET_IP:5432/onboarding_db


# ============================================
# LLM API CONFIGURATION
# ============================================

# Choose your LLM provider: openai, gemini, or deepseek
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4o

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat


# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug logging (True/False)
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173


# ============================================
# OPTIONAL: REDIS (for V2 - caching/queues)
# ============================================

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
